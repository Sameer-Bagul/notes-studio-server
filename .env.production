# Production Environment Configuration for Render
# Copy this file to the Render dashboard as environment variables

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration
# Get this from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/notes-app?retryWrites=true&w=majority

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-64-character-random-string-here
JWT_EXPIRES_IN=7d

# CORS Configuration
# Update with your frontend URL after deployment
CORS_ORIGIN=https://your-frontend-app.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12

# File Upload (optional)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
